{
  "manifest_version": 2,
  "name": "Scroll magnet",
  "version": "0.1",
  "description": "Keep scrolling any website",

  "icons": {
    "48": "icons/icon.png"
  },

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Scroll magnet"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["webRequest", "activeTab"]
}
