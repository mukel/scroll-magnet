{
  "manifest_version": 2,
  "name": "Scroll magnet",
  "version": "0.1",
  "description": "Scroll magnet for dynamic pages, logs...",
  "author": "AlfonsoÂ² Peterssen",
  "icons": {
    "64": "icons/magnet-on.png"
  },
  "browser_action": {
    "default_icon": "icons/magnet-off.png",
    "default_title": "Scroll magnet"
  },
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.min.js",
        "scroll-magnet.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
